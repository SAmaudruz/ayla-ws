---
title: "Home"
layout: "default"
---

<% for page in @getCollection("posts").toJSON(): %>
<a href="<%= page.url %>">
  <div class="row">
    <div class="small-8 columns">
      <img src="/images/<%= page.basename %>/hero.jpg">
    </div>
    <div class="small-4 columns">
        <h1><%= page.title %></h1>
    </div>
  </div>
</a>
<hr/>
<% end %>


